{
  "name": "iteam-agent-client",
  "version": "0.1.0",
  "description": "iTeam AI Agent Desktop Client with Claude Code Integration",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac && xattr -cr dist/mac-arm64/*.app 2>/dev/null || xattr -cr dist/mac/*.app 2>/dev/null || true",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "iteam",
    "agent",
    "claude",
    "automation"
  ],
  "author": "iTeam",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.2",
    "socket.io-client": "^4.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.iteam.agent",
    "productName": "iTeam Agent",
    "icon": "build/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}